<UserControl x:Class="SelectAid.Views.AacView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#111">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#1D1D1D" CornerRadius="12" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="History" FontSize="20" Foreground="White" Margin="0,0,0,8" />
                <TextBlock Text="発話履歴がここに表示されます。" Foreground="#BBBBBB" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#222" CornerRadius="12" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Compose" FontSize="20" Foreground="White" Margin="0,0,0,8" />
                <TextBlock Text="編集中テキスト" FontSize="32" Foreground="#F2F2F2" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="#1D1D1D" CornerRadius="12" Padding="16" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Input" FontSize="20" Foreground="White" Margin="0,0,0,8" />
                <TextBlock Text="文字盤・候補・定型文" Foreground="#BBBBBB" />
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Background="#1A1A1A" CornerRadius="12" Padding="12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <Button Content="Speak" Width="110" Height="48" />
                <Button Content="Backspace" Width="110" Height="48" />
                <Button Content="Clear" Width="110" Height="48" />
                <Button Content="Undo" Width="110" Height="48" />
                <Button Content="Pause" Width="110" Height="48" />
                <Button Content="Buzzer" Width="110" Height="48" />
                <Button Content="Overlay" Width="110" Height="48" />
                <Button Content="Home" Width="110" Height="48" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
